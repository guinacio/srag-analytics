# Database Configuration
POSTGRES_DB=srag_analytics
POSTGRES_USER=srag_user
POSTGRES_PASSWORD=srag_password
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Read-only database user for SQL agent (security)
POSTGRES_READONLY_USER=srag_readonly
POSTGRES_READONLY_PASSWORD=readonly_pass

# LLM API Keys (REQUIRED)
OPENAI_API_KEY=sk-your-openai-api-key-here
TAVILY_API_KEY=tvly-your-tavily-api-key-here

# LangSmith Observability (OPTIONAL - leave empty if not using)
LANGSMITH_API_KEY=
LANGCHAIN_TRACING_V2=false
LANGCHAIN_PROJECT=srag-analytics

# Application Configuration
ENVIRONMENT=development
LOG_LEVEL=INFO
BACKEND_PORT=8000

# Frontend Configuration
API_BASE_URL=http://localhost:8000

# CORS Configuration (comma-separated origins, or * for all)
ALLOWED_ORIGINS=http://localhost:8501

# Security (change in production)
SECRET_KEY=your-secret-key-here-change-in-production
